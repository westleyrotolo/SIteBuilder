@using SiteBuilder.Infrastructures;
@{
    var version = Piranha.Utils.GetAssemblyVersion(typeof(Piranha.App).Assembly);
    version = version.Substring(0, version.LastIndexOf("."));
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <style>
        .main {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .app-content {
            flex: 1 0 auto;
        }

        footer {
            color: #fff;
        }
        .footer-links {
            min-height: 150px;
            background-color: #262626;
            padding: 2em;
        }
        .footer-copyright {
            padding: .5em;
            min-height: 1.3em;
            background-color: #1e1e1e;
            text-align:center;
            color: #f0f0f0;
        }
        .nav-big{
            font-size:1.3em!important;
        }

        .nav-footer {
            margin-right: 1em!important
        }

        .dropdown-menu {
            font-size: 1em!important;
        }

        .dropdown-item.active {
               background-color:transparent!important;
               color: #f94c3b!important;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&family=Raleway:wght@700&display=swap">
    <link rel="stylesheet" href="~/assets/css/style.min.css" asp-append-version="true">

    @RenderSection("head", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="~/">AdSoft </a>
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    @foreach (var item in (await WebApp.Site.Sitemap.ForUserAsync(User, Auth)).Where(i => !i.IsHidden))
                    {

                        @if (item.Items.Count == 0)
                        {
                            <li class="nav-item@(item.Id == WebApp.PageId || item.HasChild(WebApp.PageId) ? " active" : "")">
                                <a class="nav-link" href="@WebApp.Url(item)">@item.MenuTitle</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-item@(item.Id == WebApp.PageId || item.HasChild(WebApp.PageId) ? " active" : "") nav-link @(item.Items != null && item.Items.Count > 0 ? "dropdown-toggle" : "")" href="@WebApp.Url(item)" id="ddM-@item.Id" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @item.MenuTitle
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="ddM-@item.Id">
                                    @foreach (var subitem in item.Items)
                                    {
                                        <li class="nav-item@(subitem.Id == WebApp.PageId || subitem.HasChild(WebApp.PageId) ? " active" : "") dropdown-item">
                                            <a class="nav-link" href="@WebApp.Url(subitem)">@subitem.MenuTitle</a>
                                        </li>
                                    }
                                </ul>

                            </li>
                        }
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="main">
        <div class="app-content">
            <div class="dislay:block">
                @RenderBody()
            </div>

        </div>
        <footer>
            @{
                var currentSite = await WebApp.Site.GetContentAsync<AdvancedSite>();
            }
            <div class="footer-links">
                <div class="row" style="color:white">
                    @if (currentSite != null && currentSite.FooterContents.ShoWhoWeAre.Value)
                    {
                    <div style="padding-top:.4em;max-width:250px" class="col-12 col-md-auto">
                        <div style="font-size: 1.5em; margin-bottom: .3em">AdSoft Srl</div>
                        <span style="margin-top:1em">
                            @Html.Raw(currentSite.FooterContents.WhoWeAre)
                        </span>
                    </div>
                    }
                    @foreach (var item in (await WebApp.Site.Sitemap.ForUserAsync(User, Auth)).Where(i => !i.IsHidden))
                    {
                        <div class="col-12 col-md-auto">
                            <ul class="navbar-nav">
                                <li class="nav-item nav-big nav-footer">
                                    <a class="nav-link" href="@WebApp.Url(item)">@item.MenuTitle</a>
                                </li>
                                @foreach (var subitem in item.Items.Where(x => !x.IsHidden))
                                {
                                    <li class="nav-item nav-footer">
                                        <a style="padding: 2px!important" class="nav-link" href="@WebApp.Url(subitem)">@subitem.MenuTitle</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
            <div class="footer-copyright">
                <span>2022 Copyright: AdSoft Srl</span>
            </div>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>

